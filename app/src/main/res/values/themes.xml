<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - ATENTE-SE PARA O DETALHE "DayNight" -->
    <style name="Theme.DesafiosComunsAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- +=======================================================+ -->
        <!-- | Video setup toolbar: https://youtu.be/RbOCBzHIwSw      | -->
        <!-- +=======================================================+ -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- FORCE DARK WEB VIEW: SE JA TIVER USANDO VERSÃƒO 29 PODE HABILITAR ESSA PROPERTY -->
        <!-- <item name="android:forceDarkAllowed">true</item> -->
    </style>

    <style name="Theme.DesafiosComunsAndroid.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- +=======================================================+ -->
    <!-- | Video Splash Screen: https://youtu.be/cMXE8PN-qIc     | -->
    <!-- +=======================================================+ -->
    <style name="SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.DesafiosComunsAndroid</item>
    </style>

</resources>