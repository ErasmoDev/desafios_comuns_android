<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".custom_components.CustomComponentsFragment">

    <com.progdeelite.dca.custom_components.CustomSliderView
        android:id="@+id/slider_imperative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.progdeelite.dca.custom_components.CustomSliderView
        android:id="@+id/slider_declarative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:value="1"
        custom:title="Slider declarativo"
        custom:valueList="@array/sliderValues" />

</LinearLayout>